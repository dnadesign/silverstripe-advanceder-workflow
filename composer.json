{
    "name": "dnadesign/silverstripe-advanceder-workflow",
    "description": "Advanced workflow extensions for SilverStripe CMS with urgency system and cancel functionality",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "workflow",
        "cms",
        "urgency",
        "cancel"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "DNA Design",
            "email": "developers@dnadesign.co.nz"
        }
    ],
    "require": {
        "php": "^8.3",
        "silverstripe/framework": "^6.0",
        "silverstripe/cms": "^6.0",
        "symbiote/silverstripe-advancedworkflow": "^7.0",
        "symbiote/silverstripe-queuedjobs": "^6.0"
    },
     "require-dev": {
        "cambis/silverstan": "^2.1",
        "cambis/silverstripe-rector": "^2.1",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "rector/rector": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "DNADesign\\AdvancederWorkflow\\": "src/"
        }
    },
    "extra": {
        "expose": [
            "client/dist"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "phpstan/extension-installer": true,
            "silverstripe/vendor-plugin": true
        } 
    }
}
